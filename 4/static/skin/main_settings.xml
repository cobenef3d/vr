<krpano>


  <action name="load_materialdesignicons" autorun="preinit" type="Javascript" protect="true"><![CDATA[
    var element = document.createElement("link");
    element.setAttribute("rel", "stylesheet");
    element.setAttribute("type", "text/css");
    element.setAttribute("href", "//cdn.materialdesignicons.com/3.2.89/css/materialdesignicons.min.css");
    document.getElementsByTagName("head")[0].appendChild(element);
  ]]></action>  


  <skin_settings autorotate="false" textbox="tooltip" number_of_levels="1" start_from_level="1" popup_width="340" />


  <action name="load_font_dynamicly" autorun="preinit" type="Javascript" protect="true"><![CDATA[
    var font = document.createElement("link");
    font.setAttribute("rel", "stylesheet");
    font.setAttribute("type", "text/css");
    font.setAttribute("href", "//fonts.googleapis.com/css?family=Quicksand&amp;subset=cyrillic-ext,latin-ext");
    document.getElementsByTagName("head")[0].appendChild(font);
  ]]></action>

  <navigator show_only_in_drag_mode="true" show_navigator_box="true" mobile_active="false" bg="true" bgcolor="0x003366" width="156" y="20" x="20" align="leftbottom" edge="leftbottom" bgalpha="0.5" />
    


<!-- hotspot style -->
  <style name="obj_static_marker_style" width="14" height="14" bgcolor="0x002200" bgshadow="0 0 3 0x000000 0.3" bgroundedge="10" bgborder="3 0xFF0000 1" align="center" edge="center" bgalpha="0.3" />
<!-- end -->

<!-- footer buttons style -->
  <style name="move_btn_styles" type="text" bgcolor="0x003366" bgalpha="0.7" edge="center" width="30" height="30" roundedge="30" bgborder="3 0xffffff 0.7" mergedalpha="false" vcenter="true" x="0" y="0" zorder="1" keep="true" onover="set(width,32);set(height,32);set(bgalpha,1.0)" onout="set(width,30);set(height, 30);set(bgalpha,0.7)"  />

  <layer name="navi_belt" type="container" y="30" align="bottom" edge="bottom" height="3" width="120" scale="1" bgalpha="0" bgcapture="false" zorder="15" keep="true">
    <layer name="play_pause" style="move_btn_styles" x="0" rotatemode="calc:skin_settings.autorotate != false ? true : false" padding="2 0 -2 0" align="left" html="[span class='mdi mdi-play' /]" css="color:#cccccc;font-size:17px;text-align:center;" onclick="switch_rotate_mode(get(rotatemode))" />
    <layer name="move_plus" style="move_btn_styles" x="40" padding="1 0 -1 0" align="left" html="[span class='mdi mdi-plus' /]" css="color:#cccccc;font-size:23px;text-align:center;" ondown="set(fov_moveforce,-10);" onup="set(fov_moveforce,0);"/>
    <layer name="move_minus" style="move_btn_styles" x="40" padding="1 0 -1 0" align="right" html="[span class='mdi mdi-minus' /]" css="color:#cccccc;font-size:23px;text-align:center;" ondown="set(fov_moveforce,+10);" onup="set(fov_moveforce,0);" />
    <layer name="full_screen" style="move_btn_styles" x="0" padding="2 0 -2 0" align="right" html="[span class='mdi mdi-arrow-expand-all' /]" css="color:#cccccc;font-size:17px;text-align:center;" onclick="switch(fullscreen)" devices="fullscreensupport" />
  </layer>
<!-- end -->



  <data name="tooltip_css">
      h1 {color:#FFFFFF; font-family: Quicksand, sans-serif; font-weight:normal; text-align:left; font-size:23px; }
      h2 {color:#FFFFFF; font-family: Quicksand, sans-serif; font-weight:normal; text-align:left; font-size:21px; }
      h3 {color:#FFFFFF; font-family: Quicksand, sans-serif; font-weight:normal; text-align:left; font-size:19px; }
      
      blockquote {color:#cccccc; font-family: Quicksand, sans-serif; font-weight:normal; text-align:left; font-size:15px; font-style: italic;}
      p {color:#cccccc; font-family: Quicksand, sans-serif; font-weight:normal; text-align:left; font-size:15px; }
      tbody {color:#cccccc; font-family: Quicksand, sans-serif; font-weight:normal; text-align:left; font-size:15px; }
      li {color:#b9b9b9; font-family: Quicksand, sans-serif; font-weight:normal; text-align:left; font-size:15px; }
      a {color:#c2e2ff; font-family: Quicksand, sans-serif; font-weight:normal; text-align:left; font-size:15px; }
      span {color:#cccccc; font-family: Courier, sans-serif; font-weight:normal; text-align:left; font-size:15px;}
  </data>


<!-- textbox style -->
  <style name="textbox_bg" type="container" bgcapture="true" handcursor="true" bgalpha="0.2" bgcolor="0x000000" width="100%" height="100%" align="center" edge="center" zorder="40" keep="true" onclick="callwith(layer[textbox_styles], tween(scale|alpha, 0.8|0, 0.2, easeOutElastic, tween(layer[textbox_bg].alpha,0,0.1,,removelayer(textbox_bg,true))))" />

  <style name="textbox_styles" type="text" parent="textbox_bg" scale="0.8" alpha="0" bgcolor="0x222222" bgalpha="1" align="center" edge="center" maxwidth="get:skin_settings.popup_width" width="-10" capture="false" autoheight="true" bgshadow="0 2 2 0x000000 0.3" roundedge="6" padding="10" vcenter="true" x="0" y="0" keep="true" css="data:tooltip_css"  />
  

  <control mouse="drag"
         touch="drag"
         dragrelative="true"
         draginertia="0.1"
         dragfriction="0.9"
         movetorelative="true"
         movetoaccelerate="1.0"
         movetospeed="10.0"
         movetofriction="0.2"
         keybaccelerate="0.5"
         keybspeed="10.0"
         keybfriction="0.2"
         keybfovchange="0.2"
         mousefovchange="9.0"
         fovspeed="30.0"
         fovfriction="0.7"
         zoomtocursor="true"
         zoomoutcursor="true"
         touchzoom="true"
         bouncinglimits="false"
         />




  <textstyle name="DEFAULT"
           origin="cursor"
           edge="bottom"
           xoffset="0"
           yoffset="-5"
           fadeintime="0.0"
           showtime="0.1"
           fadetime="0.0"
           textalign="none"
           padding="10"
           css="get:data[tooltip_css].content"
           width="get:skin_settings.popup_width"
           vcenter="true"
           background="true"
           backgroundcolor="0x222222"
           backgroundalpha="1.0"
           border="true"
           bordercolor="0x000000"
           borderalpha="0.5"
           borderwidth="1.0"
           roundedge="4"
           shadow="0.2"
           shadowrange="4.0"
           shadowangle="90"
           shadowcolor="0x000000"
           shadowalpha="1.0"
           textshadow="0.0"
           textshadowrange="4.0"
           textshadowangle="45"
           textshadowcolor="0x000000"
           textshadowalpha="1.0"
           alpha="1.0"
           parent=""
           noclip="true"
           />


  <contextmenu>
    <item name="stickerWriting" caption="[span class='mdi mdi-refresh' style='font-size:20px; vertical-align: middle; padding-right:0.25em; margin-left:-0.25em; width: 22px;'][/span]RESET VIEW" onclick="tween(view.fov, 5)"/>
  </contextmenu>

	
</krpano>